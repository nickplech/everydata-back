enum Permission {
  ADMIN
  USER
  CLIENTCREATE
  CLIENTUPDATE
  CLIENTDELETE
  HIPAA
  EXPRESS
  STANDARD
  PERMISSIONUPDATE
}

type User {
  id: ID! @unique
  firstName: String!
  lastName: String!
  cellPhone: String! @unique
  email: String! @unique
  businessName: String!
  password: String!
  resetToken: String
  resetTokenExpiry: Float

  permissions: [Permission]
  appointments: [Appointment!]!
  cart: [CartItem!]!
  plan: String!
}

type Client {
  id: ID! @unique
  firstName: String!
  lastName: String!
  dependantFirstName: String
  dependantLastName: String
  cellPhone: String! @unique
  birthDay: DateTime
  image: String
  user: User!
}

type CartItem {
  id: ID! @unique
  quantity: Int! @default(value: 1)
  client: Client
  user: User!
  date: DateTime
  confirmationStatus: String!
}

type Appointment {
  id: ID! @unique
  reason: [Reason!]!
  provider: [String]
  date: DateTime!
  timeRange: TimeRange
  bookedBy: String
  note: String
  client: [Client!]!
  user: User!
}

type WaitList {
  id: ID! @unique
  user: User!
  client: [Client!]!
}

type Reason {
  id: ID! @unique
  name: String!
  defaultLength: Int
  provider: String
  color: String!
  user: User!
}

type TimeRange {
  id: ID! @unique
  start: Int!
  length: Int!
  date: DateTime!
  isInPast: Boolean!
}

type TextReminder {
  id: ID! @unique
  from: String!
  to: String!
  text: String!
  statusReportReq: Boolean
  confirmationStatus: String
  createdAt: DateTime!
  updatedAt: DateTime!
  user: User!
  client: Client!
}

type TextTemplate {
  id: ID! @unique
  name: String!
  content: String!
  customVariable: String
  dateVariable: DateTime
  timeVariable: DateTime
}

type InboundMessage {
  id: ID! @unique
  msisdn: String!
  to: String!
  text: String!
  type: String!
  keyword: String!
  messageTimeStamp: String!
  user: User!
  client: Client!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type OrderPackage {
  id: ID! @unique
  title: String!
  description: String!
  image: String!
  price: Int!
  plan: String!
  quantity: Int! @default(value: 1)
  user: User
}

type Order {
  id: ID! @unique
  plan: String!
  price: Int!
  user: User!
  charge: String!
  createdAt: DateTime!
  updatedAt: DateTime!
}
